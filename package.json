{
  "name": "greyfall",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server",
    "signal"
  ],
  "scripts": {
    "dev": "npm -w client run dev",
    "dev:all": "sh -c 'trap \"kill 0\" EXIT INT TERM; npm -w server run dev & npm -w signal run dev & npm -w client run dev; wait'",
    "start:dev": "npm run dev:all",
    "build": "npm -w client run build",
    "preview": "npm -w client run preview",
    "typecheck": "npm -w client run typecheck",
    "server": "npm -w server run start",
    "server:build": "npm -w server run build",
    "signal": "npm -w signal run start",
    "signal:build": "npm -w signal run build"
  },
  "dependencies": {},
  "devDependencies": {}
}
