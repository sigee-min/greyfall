{
  "name": "greyfall",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server",
    "signal",
    "shared/protocol",
    "shared/auth"
  ],
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "build": "npm run build:shared && npm -w client run build",
    "build:shared": "npm -w shared/protocol run build && npm -w shared/auth run build",
    "preview": "npm -w client run preview",
    "typecheck": "npm -w client run typecheck",
    "lint": "npm -w client run lint",
    "server": "npm -w server run start",
    "server:build": "npm -w server run build",
    "signal": "npm -w signal run start",
    "signal:build": "npm run build:shared && npm -w signal run build",
    "postinstall": "npm run build:shared || true"
  },
  "dependencies": {},
  "devDependencies": {}
}
