{
  "name": "greyfall",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:test-llm": "vite --open /test-llm/index.html",
    "prebuild": "node scripts/generate-favicon.mjs --size 128",
    "build": "tsc -b && vite build",
    "postinstall": "npm --prefix protocol install --no-audit --no-fund && npm --prefix protocol run build",
    "server:build": "tsc -p server/tsconfig.server.json",
    "server:start": "node server/dist/index.js",
    "server": "npm run server:build && npm run server:start",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "npm run lint && npm run typecheck",
    "coretest:build": "tsc -p tsconfig.test.json",
    "coretest": "npm run coretest:build && CORETEST_FILES='(ack-resend|host-router-limit|client-patch-queue)' node scripts/run-core-tests.mjs"
  },
  "dependencies": {
    "@greyfall/protocol": "file:protocol",
    "@huggingface/transformers": "^3.7.5",
    "@mlc-ai/web-llm": "^0.2.79",
    "@pixi/filter-kawase-blur": "^5.1.1",
    "@pixi/filter-noise": "^5.2.0",
    "@pixi/layers": "^2.0.1",
    "@radix-ui/react-icons": "^1.3.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "jotai": "^2.9.3",
    "nanoid": "^4.0.2",
    "pixi.js": "^7.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.2.1",
    "typings": "^2.1.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vitejs/plugin-basic-ssl": "^1.0.2",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.10.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.9.0",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.10",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.4.5",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.1"
  }
}
