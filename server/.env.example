# Greyfall Logs Server â€” .env (production sample)

NODE_ENV=production

# HTTP (use a dedicated port env)
SERVER_PORT=8080
DATA_ROOT=./data
MAX_FILE_SIZE_MB=100

# Auth (session-only)
# Obtain from Google Cloud Console (OAuth 2.0 Client ID)
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com

# Change this in production (keep secret!)
JWT_SECRET=please-change-in-production

# Session lifetime and refresh skew
SESSION_TTL_SEC=18000           # 5 hours
SESSION_REFRESH_SKEW_SEC=900    # renew if <15 minutes remain
COOKIE_NAME=SID
