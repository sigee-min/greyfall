{
  "name": "greyfall-logs-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "sh -c 'tsc -p tsconfig.server.json -w & while [ ! -f dist/index.js ]; do sleep 0.2; done; node --import dotenv/config --watch dist/index.js'",
    "build": "tsc -p tsconfig.server.json",
    "start": "node --import dotenv/config dist/index.js",
    "test": "npm run build && node --test tests/contract.test.mjs"
  },
  "dependencies": {
    "@shared/auth": "*",
    "dotenv": "^16.4.5",
    "google-auth-library": "^9.0.0",
    "better-sqlite3": "^9.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/better-sqlite3": "^7.6.10",
    "typescript": "~5.4.5"
  }
}
