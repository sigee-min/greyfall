{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@shared/protocol": ["../shared/protocol/schema.ts"],
      "zod": ["./node_modules/zod"]
    }
  },
  "include": ["src", "../shared/protocol/schema.ts"],
  "exclude": ["dist"]
}
